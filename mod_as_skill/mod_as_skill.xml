    			<field name="skill_title1" type="text" default="" label="Skill Title-1" description="Skill Title 1"></field>
    			<field name="percentase1" type="text" default="" label="Skill Percentase 1" description="Skill Percentase 1"></field>
    			<field name="skill_title2" type="text" default="" label="Skill Title-2" description="Skill Title 2"></field>
    			<field name="percentase2" type="text" default="" label="Skill Percentase 2" description="Skill Percentase 2"></field>
    			<field name="skill_title3" type="text" default="" label="Skill Title-3" description="Skill Title 3"></field>
    			<field name="percentase3" type="text" default="" label="Skill Percentase 3" description="Skill Percentase 3"></field>
    			<field name="skill_title4" type="text" default="" label="Skill Title-4" description="Skill Title 4"></field>
    			<field name="percentase4" type="text" default="" label="Skill Percentase 4" description="Skill Percentase 4"></field>
    			
    		</fieldset>
    	</fields>
    		
    </config>
    </extension>
